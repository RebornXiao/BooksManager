<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="multiChoiceAdapterStyle">@style/MultiChoiceAdapter</item>
    </style>

    <style name="MultiChoiceAdapter">
        <item name="itemClickInActionMode">selectItem</item>
    </style>

    <!--设置-全屏-->
    <style name="NoTitleFullscreen" parent="Theme.AppCompat.Light.NoActionBar">
    </style>


    <style name="MyAppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- <item name="android:actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item> -->
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/white</item>
    </style>
</resources>
